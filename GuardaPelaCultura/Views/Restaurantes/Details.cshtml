@model GuardaPelaCultura.Models.Restaurantes

@{
    ViewData["Title"] = "Details";
}
<link href="https://fonts.googleapis.com/css?family=Open+Sans:400" rel="stylesheet" />
<link href="~/css/templatemo-style.css" rel="stylesheet" />

<script src="~/js/jquery.min.js"></script>
<script src="~/js/parallax.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<h2 class="text-center mt-5 mb-4">Detalhos Restaurante</h2>
<div>
    <div class="row">
        <div class="col-sm-4">
            <p class="text-center">Nome</p>
        </div>
        <div class="col-sm-8">
            @Html.DisplayFor(model => model.NomeRestaurante)
        </div>
        <div class="col-sm-4">
            <p class="text-center">Telemóvel</p>
        </div>
        <div class="col-sm-8">
            @Html.DisplayFor(model => model.NumeroTelefone)
        </div>
        <div class="col-sm-4">
            <p class="text-center">Email</p>
        </div>
        <div class="col-sm-8">
            @Html.DisplayFor(model => model.EmailRestaurante)
        </div>
        <div class="col-sm-4">
            <p class="text-center">Morada</p>
        </div>
        <div class="col-sm-8">
            @Html.DisplayFor(model => model.LocalizacaoRestaurante)
        </div>
        <div class="col-sm-4">
            <p class="text-center">Descrição</p>
        </div>
        <div class="col-sm-8">
            @Html.DisplayFor(model => model.TextoDescritivoRestaurante)
        </div>
        <div class="col-sm-4">
            <p class="text-center">Hora de Abrir</p>
        </div>
        <div class="col-sm-8">
            @Html.DisplayFor(model => model.HoraAbertura)
        </div>
        <div class="col-sm-4">
            <p class="text-center">Hora de Fechar</p>
        </div>
        <div class="col-sm-8">
            @Html.DisplayFor(model => model.HoraFecho)
        </div>
        <div class="col-sm-4">
            <p class="text-center">1ª Imagem</p>
        </div>
        <div class="col-sm-8">
            @{
                var base64 = Convert.ToBase64String(Model.Imagem);
                var imgsrc = string.Format("data:image/gif; base64,{0}", base64);
            }
            <img src='@imgsrc' width="80%" />
        </div>
        <div class="col-sm-4">
            <p class="text-center">2ª Imagem</p>
        </div>
        <div class="col-sm-8">
            @{
                var base65 = Convert.ToBase64String(Model.Imagem1);
                var imgsrc1 = string.Format("data:image/gif; base64,{0}", base65);
            }
            <img src='@imgsrc1' width="80%" />
        </div>
        <div class="col-sm-4">
            <p class="text-center">3ª Imagem</p>
        </div>
        <div class="col-sm-8">
            @{
                var base66 = Convert.ToBase64String(Model.Imagem2);
                var imgsrc2 = string.Format("data:image/gif; base64,{0}", base66);
            }
            <img src='@imgsrc2' width="80%" />
        </div>
        <div class="col-sm-4">
            <p class="text-center">4ª Imagem</p>
        </div>
        <div class="col-sm-8">
            @{
                var base67 = Convert.ToBase64String(Model.Imagem3);
                var imgsrc3 = string.Format("data:image/gif; base64,{0}", base67);
            }
            <img src='@imgsrc3' width="80%" />
        </div>

    </div>
</div>
<div class="text-center">
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.RestaurantesId">Editar</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
</div>

@model GuardaPelaCultura.Models.Restaurantes

@{
    ViewData["Title"] = "Edit";
}
<link href="https://fonts.googleapis.com/css?family=Open+Sans:400" rel="stylesheet" />
<link href="~/css/templatemo-style.css" rel="stylesheet" />

<script src="~/js/jquery.min.js"></script>
<script src="~/js/parallax.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<h2 class="text-center mt-5 mb-4">Editar Restaurante</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RestaurantesId" />
            <div class="form-group pt-1 mr-2 text-center">
                <label asp-for="NomeRestaurante" class="control-label">Nome</label>
            </div>
            <div class="form-group pt-2 mr-2 text-center">
                <label asp-for="NumeroTelefone" class="control-label">Telemóvel</label>
            </div>
            <div class="form-group pt-2 mr-2 text-center">
                <label asp-for="EmailRestaurante" class="control-label">Email</label>
            </div>
            <div class="form-group pt-2 mr-2 text-center">
                <label asp-for="LocalizacaoRestaurante" class="control-label">Morada</label>
            </div>
            <div class="form-group pt-2 mr-2 text-center">
                <label asp-for="TextoDescritivoRestaurante" class="control-label">Descrição</label>
            </div>
            <div class="form-group pt-2 mr-2 text-center">
                <label asp-for="HoraAbertura" class="control-label">Abertura</label>
            </div>
            <div class="form-group pt-2 mr-2 text-center">
                <label asp-for="HoraFecho" class="control-label">Fecho</label>
            </div>
            <div class="form-group pt-2 mr-2 text-center">
                <label asp-for="Imagem" class="control-label">1ª Imagem</label>
            </div>
            <div class="form-group pt-2 mr-2 text-center">
                <label asp-for="Imagem1" class="control-label">2ª Imagem</label>
            </div>
            <div class="form-group pt-2 mr-2 text-center">
                <label asp-for="Imagem2" class="control-label">3ª Imagem</label>
            </div>
            <div class="form-group pt-2 mr-2 text-center">
                <label asp-for="Imagem3" class="control-label">4ª Imagem</label>
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <form method="post" enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RestaurantesId" />
            <div class="form-group">
                <input asp-for="NomeRestaurante" class="form-control" />
                <span asp-validation-for="NomeRestaurante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="NumeroTelefone" class="form-control" />
                <span asp-validation-for="NumeroTelefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="EmailRestaurante" class="form-control" />
                <span asp-validation-for="EmailRestaurante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="LocalizacaoRestaurante" class="form-control" />
                <span asp-validation-for="LocalizacaoRestaurante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="TextoDescritivoRestaurante" class="form-control" />
                <span asp-validation-for="TextoDescritivoRestaurante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="HoraAbertura" class="form-control" />
                <span asp-validation-for="HoraAbertura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="HoraFecho" class="form-control" />
                <span asp-validation-for="HoraFecho" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <input asp-for="Imagem" type="file" accept="image/*" id="file" aria-label="File browser example" title="Insira a Primeira Imagem">
                <span asp-validation-for="Imagem" class="file-custom text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <input asp-for="Imagem1" type="file" accept="image/*" id="file" aria-label="File browser example" title="Insira a Segunda Imagem">
                <span asp-validation-for="Imagem1" class="file-custom text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <input asp-for="Imagem2" type="file" accept="image/*" id="file" aria-label="File browser example" title="Insira a Terceira Imagem">
                <span asp-validation-for="Imagem2" class="file-custom text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <input asp-for="Imagem3" type="file" accept="image/*" id="file" aria-label="File browser example" title="Insira a Quarta Imagem">
                <span asp-validation-for="Imagem3" class="file-custom text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model GuardaPelaCultura.Models.Restaurantes

@{
    ViewData["Title"] = "Delete";
}

<link href="https://fonts.googleapis.com/css?family=Open+Sans:400" rel="stylesheet" />
<link href="~/css/templatemo-style.css" rel="stylesheet" />

<script src="~/js/jquery.min.js"></script>
<script src="~/js/parallax.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<body>
    <h2 class="text-center mt-5 mb-4">Eliminar Restaurante "@Html.DisplayFor(model => model.NomeRestaurante)"</h2>
    <div class="card-deck justify-content-center">
        <div class="col-sm-6">
            <div class="card mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">@Html.DisplayFor(model => model.NomeRestaurante)</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.TextoDescritivoRestaurante)</p>
                    <p class="mt-2"><strong>Telefone: </strong>@Html.DisplayFor(model => model.NumeroTelefone)</p>
                    <p class="mt-2"><strong>Email: </strong>@Html.DisplayFor(model => model.EmailRestaurante)</p>
                    <p class="mt-2"><strong>Localização: </strong>@Html.DisplayFor(model => model.LocalizacaoRestaurante)</p>
                    <p class="mt-2"><strong>Hora de Abrir: </strong>@Html.DisplayFor(model => Model.HoraAbertura)</p>
                    <p class="mt-2"><strong>Hora de Fechar: </strong>@Html.DisplayFor(model => Model.HoraFecho)</p>
                    <p class="mt-2"><strong>Imagens do Restaurante</strong></p>
                    <div class="row mt-3 mb-3">
                        <div class="col-sm-3">
                            @{
                                var base64 = Convert.ToBase64String(Model.Imagem);
                                var imgsrc = string.Format("data:image/gif; base64,{0}", base64);
                            }
                            <img src='@imgsrc' width="80%" />
                        </div>
                        <div class="col-sm-3">
                            @{
                                var base65 = Convert.ToBase64String(Model.Imagem1);
                                var imgsrc1 = string.Format("data:image/gif; base64,{0}", base65);
                            }
                            <img src='@imgsrc1' width="80%" />
                        </div>
                        <div class="col-sm-3">
                            @{
                                var base66 = Convert.ToBase64String(Model.Imagem2);
                                var imgsrc2 = string.Format("data:image/gif; base64,{0}", base66);
                            }
                            <img src='@imgsrc2' width="80%" />
                        </div>
                        <div class="col-sm-3">
                            @{
                                var base67 = Convert.ToBase64String(Model.Imagem3);
                                var imgsrc3 = string.Format("data:image/gif; base64,{0}", base67);
                            }
                            <img src='@imgsrc3' width="80%" />
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <form asp-action="Delete" class="align-content-center text-center">
        <input type="hidden" asp-for="RestaurantesId" />
        <input type="submit" value="Apagar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
    </form>
</body>

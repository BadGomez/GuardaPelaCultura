@model IEnumerable<GuardaPelaCultura.Models.Restaurantes>

@{
    ViewData["Title"] = "Index";
}

<link href="https://fonts.googleapis.com/css?family=Open+Sans:400" rel="stylesheet" />
<link href="css/templatemo-style.css" rel="stylesheet" />

<script src="~/js/jquery.min.js"></script>
<script src="~/js/parallax.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<p class="mt-4 text-center mb-4">
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <p class="text-center">Nome Restaurante</p>
            </th>
            <th>
                <p class="text-center">Número Telefone</p>
            </th>
            <th>
                <p class="text-center">Email</p>
            </th>
            <th>
                <p class="text-center">Morada</p>
            </th>
            <th>
                <p class="text-center">Texto Descritivo</p>
            </th>
            <th>
                <p class="text-center">Horário</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeRestaurante)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroTelefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailRestaurante)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LocalizacaoRestaurante)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TextoDescritivoRestaurante)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HorarioRestaurante)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RestaurantesId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.RestaurantesId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.RestaurantesId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

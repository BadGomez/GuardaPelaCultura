@model GuardaPelaCultura.Models.Mesa

@{
    ViewData["Title"] = "Edit";
}

<link href="https://fonts.googleapis.com/css?family=Open+Sans:400" rel="stylesheet" />
<link href="~/css/templatemo-style.css" rel="stylesheet" />

<script src="~/js/jquery.min.js"></script>
<script src="~/js/parallax.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<h2 class="text-center mt-5 mb-4">Editar Mesa</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MesaId" />
            <div class="form-group pt-1 mr-2 text-center">
                <label asp-for="RestaurantesId" class="control-label">Restaurante</label>
            </div>
            <div class="form-group pt-2 mr-2 text-center">
                <label asp-for="MesasRestaurante" class="control-label">Mesa</label>
            </div>
            <div class="form-group pt-2 mr-2 text-center">
                <label asp-for="LugaresRestaurante" class="control-label">Lugares</label>
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <form method="post" enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MesaId" />
            <div class="form-group">
                <select asp-for="RestaurantesId" class="form-control" asp-items="ViewBag.RestaurantesId"></select>
                <span asp-validation-for="RestaurantesId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="MesasRestaurante" class="form-control" />
                <span asp-validation-for="MesasRestaurante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="LugaresRestaurante" class="form-control" />
                <span asp-validation-for="LugaresRestaurante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>
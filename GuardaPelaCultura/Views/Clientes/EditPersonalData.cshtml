@model EditLoggedInClienteViewModel

@{
    ViewData["Title"] = "Edit Personal Data";
}

<link href="https://fonts.googleapis.com/css?family=Open+Sans:400" rel="stylesheet" />
<link href="~/css/templatemo-style.css" rel="stylesheet" />

<script src="~/js/jquery.min.js"></script>
<script src="~/js/parallax.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<h2 class="text-center mt-5 mb-4">Editar Registo</h2>
<div class="row">
    <div class="col-sm-2 ml-5">
            <div class="form-group pt-1 mr-2">
                <label asp-for="NomeCliente" class="control-label">Nome</label>
            </div>
            <div class="form-group pt-2 mr-2">
                <label asp-for="NumeroTelefoneCliente" class="control-label">Telémovel</label>
            </div>
    </div>
    <div class="col-sm-9">
        <form asp-action="EditPersonalData">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="NomeCliente" class="form-control" />
                <span asp-validation-for="NomeCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="NumeroTelefoneCliente" class="form-control" />
                <span asp-validation-for="NumeroTelefoneCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a class="btn btn-danger" asp-controller="Home" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>